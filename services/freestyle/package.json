{
  "name": "@self-healing-ci/freestyle",
  "version": "0.0.0-development",
  "description": "Freestyle testing framework with deterministic containers and flakiness detection",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "dockerode": "^4.0.2",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "node-cron": "^3.0.3",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "nock": "^13.4.0"
  },
  "engines": {
    "node": "^20.0.0"
  },
  "keywords": [
    "freestyle",
    "testing",
    "containers",
    "flakiness",
    "deterministic",
    "self-healing-ci"
  ],
  "author": "Self-Healing CI Team",
  "license": "MIT"
}
